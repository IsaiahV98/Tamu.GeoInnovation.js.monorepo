<form autocomplete="off" method="post">
  <input type="hidden" name="uuid" value="<%= details.uuid %>"/>

  <% if (error) {%> <p id="error-message"><%= message %></p> <%}%>

  <input required type="text" name="login" class="error-input" placeholder="Enter any login" <% if (!details.params.login_hint) { %>autofocus="on"<% } else { %> value="<%= details.params.login_hint %>" <% } %>>
  <input required type="password" name="password" <% if (error && type === "password") {%>class="error-input"<%}%> placeholder="and password" <% if (details.params.login_hint) { %>autofocus="on"<% } %>>

  <label><input type="checkbox" name="remember" value="yes" checked="yes">Stay signed in</label>

  <button type="submit" class="login login-submit">Sign-in</button>
</form>
